<% provide(:title, 'My Collections') %>
<h1>My Collections</h1>

<% if current_user %>
<div class="container">
<ul class="unstyled">
	<li><%= link_to "Owned", '#' %></li>
	<li><%= link_to "Wish List", '#' %></li>
	<li><%= link_to "Pull List", '#' %></li>
		<% @collections.each do |collection| %>
			<li><%= link_to collection.name, collection_path(collection)%> (<%= collection.books.count %>)</li>
		<% end %>
		<%= form_for @collection do |f| %>
			<%= f.text_field :name %><br />
			<%= f.submit %>
		<% end %>
	</div>
	<% else %>
		<p><%= link_to "Login", login_path %> or <%= link_to "Sign up", signup_path %> to add Collections</p>
<% end %>

	

</ul>