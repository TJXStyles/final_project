<% provide(:title, 'Collections') %>
<h1><%= @collection.name %></h1>
<div class="container">
This collection contains <%= @collection.books.count %> comics<br/>
<%= link_to 'Edit', edit_collection_path(@collection) %>
<div>
	<%= link_to 'Add Comic', new_book_path, class: 'btn btn-inverse' %>
</div>

<% if current_user == @collection.user %>
	<% @books.each do |book| %>
	<div class="well">
		Title: <%=link_to book.title, book %><br/>
		Issue:<br/>
		Author: <%= book.author %><br/>
		<%= link_to "Delete Comic", book, class: 'btn btn-danger', method: :delete, data: { confirm: "Delete this book?" } %>
	</div>
<% end %>
	
	<div>
		<%= link_to 'Delete Collection', @collection, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<p><%= link_to 'Back', collections_path %></p>
</div>
</div>